<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/img_recyclerView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:padding="2dp"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/Entry_num_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/img_recyclerView"
            android:layout_toRightOf="@+id/img_recyclerView"
            android:gravity="center_horizontal"
            android:text="@string/line_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id = "@+id/date_recyclerview"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Entry_num_recyclerview"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/img_recyclerView"
            android:layout_toRightOf="@+id/img_recyclerView" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>